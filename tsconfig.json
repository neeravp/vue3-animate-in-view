{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext", "dom"],
      // this enables stricter inference for data properties on `this`
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths":{
          "@/*": ["src/*"]
      },
      "esModuleInterop": true,
      "sourceMap": true,
      "typeRoots": [
          "src/types",
          "node_modules/@types"
      ],
      "outDir": "./dist",
      "declaration": true
    },


  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "src/types"
  ]
    // "files": [
    //     "src/index.d.ts"
    // ]
  }
